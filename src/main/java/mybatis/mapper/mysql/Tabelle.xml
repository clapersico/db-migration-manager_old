<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.prsprj.db.migration.mybatis.mapper.TabelleMapper">

	<resultMap id="TabellaMap" type="Tabella">
  		<id property="nomeTabella" column="TABLE_NAME" />
  		
  		<!-- Columns -->
  		<collection property="columns" ofType="Column">
  			<id property="columnName" column="COLUMN_NAME" />
  			<result property="datatype" column="DATA_TYPE" />
  			<result property="lenght" 	column="CHARACTER_MAXIMUM_LENGTH" />
  		</collection>
	</resultMap>

	<select id="listaTabelle" resultMap="TabellaMap">
		Select
			TABLE_NAME,
			COLUMN_NAME,
			DATA_TYPE,
			CHARACTER_MAXIMUM_LENGTH 
		From
			INFORMATION_SCHEMA.COLUMNS
		Where
			TABLE_SCHEMA = #{nomeDatabase};
	</select>
</mapper>